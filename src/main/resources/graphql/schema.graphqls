type Author {
    id: ID!
    firstName: String!
    lastName: String!
}

type Book {
    id: ID!
    title: String!
    isbn: String!
    pageCount: Int!
    author: Author
}

type Query {
    findAllBooks: [Book]!
    findAllAuthors: [Author]!
    countAuthors: Int!
    countBooks: Int!

    findBooks(orderBy: OrderBy): [Book]
}

input OrderBy {
    field: String!
    direction: String!
}