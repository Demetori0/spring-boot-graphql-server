type Book {
    id: ID!
    title: String!
    isbn: String!
    pageCount: Int
    author: Author
}

input FilterInput {
    attribute: String
    operator: String
    value: String

    and: [FilterInput!]
    or: [FilterInput!]
}

extend type Query {
    findBooks(filters: FilterInput): [Book]!
    findAllBooks: [Book]!
    countBooks: Long!
    findBookWithId(id: ID): Book
}

